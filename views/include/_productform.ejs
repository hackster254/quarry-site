<!-- form handling -->
<form action="/api/products" method="POST" id="add_product">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Aggregate/Rock Type</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="price" class="text-light">Price</label>
            <input type="number" name="price" value="" placeholder="100">
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>

     
            